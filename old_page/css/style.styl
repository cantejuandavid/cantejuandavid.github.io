			content ""
			position absolute
			bottom -20px
			border-left 80px solid transparent
			border-top 20px solid #353535
			border-right 80px solid transparent			
			left 50%
			margin-left -80px		
	section.central			
		.ejemplo
			background #fff
			position relative
			color #333			
			span.letterBig
				font-size 56px
				line-height 50px
				float left
				padding-right 10px
			p
				text-align left
				span
					display block
					font-weight bold

					text-align left
			.contentEjemplo
				font-weight 100				
				text-align center							
				p
					padding 20px
				.shop,.inventario
					display inline-block
					background #fafafa
					border-radius 3px
					width 250px
					border 1px solid #C0C0C0
					height 200px					
					padding 10px
					vertical-align top
					text-align left		
					margin-bottom 10px			
