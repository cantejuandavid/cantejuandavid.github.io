			div
				display block
				margin-bottom 10px					
				font-size 20px
				.mail,a
					cursor pointer
					color crimson
					font-weight bold							
					text-decoration none
					&:hover
						color #34AFD3	
	section.contactEjemplos
		padding 20px
		background #fff
		color #333
		h3		
			color #333	
			margin 0 0 10px 0
			font-size 42px				
			
@media screen and (min-width: 768px)
	header
		width 768px
		margin 0 auto
		section.central
			.perfil,.habilidades
				width 40%
				vertical-align top
				display inline-block
				padding 0
				.frontend,.backend
					ul
						padding 0 10px 0 0					
			.habilidades
				width 55%
				.frontend,.backend
					float left					
					width 50%	
					h3.frontend
						color #fff
						background #92D926
						width 100%
						&:after
							content ""
							width 0
							height 0
							border-top 30px solid #fff
							border-left 30px solid #92D926
							top -0.5px
							right -10px
							z-index 999999
							position absolute
		section.objectives
			.app,.listObj
				width 45%
				display inline-block
				vertical-align middle			

@media screen and (max-width: 768px)
	header
		section.central
			.ejemplo
				.contentEjemplo
					.listSongs,.reproductor
						display block
						width 100%
					.chat
						div.left, div.right		
							display block							
							width 100%
							a
								color #61BBE7
								text-decoration none

@keyframes spin 
	50% 		
		transform(scale(1.2) rotate(360deg))
	
@keyframes brazuca 
	100% 		
		left 0
		transform(rotate(360deg))
	50%				
		left 70%
