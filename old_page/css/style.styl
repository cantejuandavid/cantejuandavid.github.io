transition(seg)
	-ms-transition all seg ease-in-out
	-moz-transition all seg ease-in-out
	-o-transition all seg ease-in-out
	-webkit-transition all seg ease-in-out
	transition all seg ease-in-out
transform(arguments)
	-ms-transform arguments
	-moz-transform arguments
	-o-transform arguments
	-webkit-transform arguments
	transform arguments
animation(arguments)
	-ms-animation arguments
	-moz-animation arguments
	-o-animation arguments
	-webkit-animation arguments
	animation arguments

*, *:before, *:after 
	-moz-box-sizing border-box
	-webkit-box-sizing border-box
	box-sizing border-box	

*
	margin 0
	padding 0
	transition(.1s)

@import url("http://fonts.googleapis.com/css?family=Open+Sans:600italic")
@import url("http://fonts.googleapis.com/css?family=Josefin+Slab:700")

body	
	background url("../img/binding_dark.png") repeat fixed	
	color #fff
	font italic 600 16px 'Open Sans', sans-serif

header
	background #232323
	display block
	text-align center
	padding 1px
	h1
		margin 50px
		background #353535
		position relative
		padding 10px	
		a
			color #fff
			text-decoration none	
