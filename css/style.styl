section.central			
	.perfil		
		display block	
		padding 20px
		text-align center			
		figure		
			.wrapperImg
				border 2px dashed #fff			
				border-radius 50%
				box-shadow 0 0 10px rgba(0,0,0,.1)
				margin 0 auto
				overflow hidden
				width 130px	
				height 130px					
				img
					width 100%
			figcaption
		blockquote
			line-height 18px
			padding 5px
			color #ddd
			font-size 14px				
