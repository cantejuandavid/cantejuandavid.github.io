				content open-quote
				color yellow
				font-size 25px
			&:after
				content close-quote
				color yellow
				font-size 25px
	.habilidades			
		display block
		.frontend,.backend
			display block
			ul
				list-style none
				padding 0 20px 0 20px
				li					
					display block					
					progress[value] 							
						appearance none
						border none
						width 100%
						height 20px							
						background-color whiteSmoke
						border-radius 3px
						box-shadow 0 2px 3px rgba(0,0,0,.5) inset							
						color royalblue
						position relative
						margin 0 0 1.5em
						overflow hidden
						&::-webkit-progress-bar
							background-color whiteSmoke
							border-radius 3px
							box-shadow 0 2px 3px rgba(0,0,0,.5) inset
						&::-webkit-progress-value
							position relative
							background-size 35px 20px, 100% 100%, 100% 100%
							border-radius 3px
							background #2DCED7
							animation animate-stripes 5s linear infinite
						&::-webkit-progress-value:after
							content ''
							position absolute
							width 5px 
							height 5px
							top 7px
							right 7px
							background-color white
							border-radius 100%
					p[data-value] 
						text-align left
						position relative
						margin-bottom 5px
						&:after
							content attr(data-value) '%'
							position absolute
							font-weight bold
							right 0
				li:nth-child(2)
					progress[value]							
						&::-webkit-progress-value
							background crimson
				span.second
					border-radius 50%						
					font-size 45px						
