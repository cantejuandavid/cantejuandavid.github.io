@import url('https://fonts.googleapis.com/css?family=Lato|Open+Sans|Open+Sans+Sans:400,800');
transition(seg)
	-ms-transition all seg ease-in-out
	-moz-transition all seg ease-in-out
	-o-transition all seg ease-in-out
	-webkit-transition all seg ease-in-out
	transition all seg ease-in-out
transform(arguments)
	-ms-transform arguments
	-moz-transform arguments
	-o-transform arguments
	-webkit-transform arguments
	transform arguments
animation(arguments)
	-ms-animation arguments
	-moz-animation arguments
	-o-animation arguments
	-webkit-animation arguments
	animation arguments

*, *:before, *:after 
	-moz-box-sizing border-box
	-webkit-box-sizing border-box
	box-sizing border-box	


